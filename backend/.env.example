PORT=3000
NODE_ENV=development

DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_USER=postgres
DATABASE_PASSWORD=your_password
DATABASE_NAME=plurihive
DATABASE_SSL=false
DATABASE_URL=postgresql://user:password@host:5432/database?sslmode=require
TYPEORM_SYNC=false
DATABASE_RETRY_ATTEMPTS=10
DATABASE_RETRY_DELAY_MS=2000
DATABASE_POOL_MAX=10
DATABASE_IDLE_TIMEOUT_MS=30000
DATABASE_CONNECT_TIMEOUT_MS=5000
DATABASE_KEEP_ALIVE=true
DATABASE_KEEP_ALIVE_DELAY_MS=10000

JWT_SECRET=change_this_to_a_random_secret_key
JWT_EXPIRATION=7d

# Comma-separated list of allowed origins for web clients in production
CORS_ORIGINS=http://localhost:3000

# Max JSON body size for uploads (e.g., activity payloads with snapshots)
BODY_LIMIT=10mb

# Optional admin key for maintenance endpoints
ADMIN_API_KEY=replace_with_strong_value

# Optional seed data for leaderboard (dev only)
SEED_LEADERBOARD=false

# Redis cache (optional)
REDIS_URL=redis://default:password@host:port
REDIS_CACHE_TTL_SECONDS=30
